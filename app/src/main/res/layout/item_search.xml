<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_search"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/item_notes_left_layout"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_search_word_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/general_margin"
            android:layout_marginRight="@dimen/general_margin"
            android:layout_marginTop="@dimen/general_margin"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_search_reading_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_search_word_text_view"
            android:layout_marginLeft="@dimen/general_margin"
            android:layout_marginRight="@dimen/general_margin"
            android:layout_marginTop="@dimen/general_margin"
            android:textSize="@dimen/reading_text_size" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_search_right_layout"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/general_margin"
        android:layout_marginRight="@dimen/general_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_search_common_status_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/general_margin"
            android:text="@string/text_common"
            android:textColor="@color/common_status" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/item_search_common_status_text_view"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_search_respectful_level_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/general_margin"
                android:layout_marginRight="@dimen/general_margin"
                android:layout_marginTop="@dimen/general_margin"
                android:text="@string/text_respectful"
                android:textColor="@color/respectful_level" />

            <TextView
                android:id="@+id/item_search_humble_level_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/general_margin"
                android:layout_toEndOf="@id/item_search_respectful_level_text_view"
                android:layout_toRightOf="@id/item_search_respectful_level_text_view"
                android:text="@string/text_humble"
                android:textColor="@color/humble_level" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/item_search_middle_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/item_notes_left_layout"
        android:layout_toLeftOf="@id/item_search_right_layout"
        android:layout_toRightOf="@id/item_notes_left_layout"
        android:layout_toStartOf="@id/item_search_right_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_search_definition_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/general_margin"
            android:textSize="@dimen/reading_text_size" />

    </LinearLayout>

</RelativeLayout>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.EntryContentsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/fragment_entry_dictionary_left_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/general_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_entry_dictionary_word_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/general_margin"
                android:text="言葉"
                android:textIsSelectable="true"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragment_entry_dictionary_reading_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_entry_dictionary_word_text_view"
                android:layout_marginTop="@dimen/general_margin"
                android:text="ことば"
                android:textColor="@color/secondary_text"
                android:textIsSelectable="true"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/fragment_entry_dictionary_common_status_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/general_margin"
                android:text="@string/text_common"
                android:textColor="@color/common_status"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/fragment_text_dictionary_blurb_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_entry_dictionary_reading_text_view"
                android:layout_marginTop="@dimen/general_2x_margin"
                android:text="noun\n1. word"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/fragment_text_dictionary_other_forms_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_text_dictionary_blurb_text_view"
                android:layout_margin="@dimen/general_margin"
                android:textIsSelectable="true" />

        </RelativeLayout>

    </ScrollView>

</FrameLayout>
